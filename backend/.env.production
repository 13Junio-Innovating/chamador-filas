# Configurações do Servidor - PRODUÇÃO
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Configurações do Banco de Dados PostgreSQL - PRODUÇÃO
# Estas variáveis serão fornecidas pela plataforma de deploy
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_NAME=${DB_NAME}
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}
DB_SSL=true

# Configurações de Autenticação JWT - PRODUÇÃO
# IMPORTANTE: Gerar secrets seguros para produção
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de CORS - PRODUÇÃO
# Atualizar com o domínio do frontend em produção
CORS_ORIGIN=https://your-frontend-domain.vercel.app
CORS_CREDENTIALS=true

# Configurações de Rate Limiting - PRODUÇÃO
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Logging - PRODUÇÃO
LOG_LEVEL=warn
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d

# Configurações de Segurança - PRODUÇÃO
TRUST_PROXY=true
SECURE_COOKIES=true